<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="practica21.MainPage"
    BackgroundColor="#333333">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- TÍTULO: FontSize según plataforma -->
        <Label Text="Gestión de Usuarios"
               TextColor="#FF8C00"
               HorizontalOptions="Center">

            <Label.FontSize>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="Android" Value="20" />
                    <On Platform="WinUI"   Value="24" />
                </OnPlatform>
            </Label.FontSize>
        </Label>

        <!-- LOGO (opcional) -->
        <Image Source="logo.png"
               WidthRequest="85"
               HeightRequest="85"
               Aspect="AspectFill"
               Margin="0,0,10,0" />

        <!-- BARRA DE BOTONES (FlexLayout) -->
        <FlexLayout Direction="Row"
                    Wrap="NoWrap"
                    JustifyContent="Center"
                    AlignItems="Center"
                    Margin="20">

            <!-- BOTÓN AÑADIR -->
            <Button CornerRadius="20" 
                    HeightRequest="40"
                    ContentLayout="Left,5"
                    Command="{Binding ComandoAbrirFormulario}"
                    BackgroundColor="#FF8C00"
                    TextColor="White"
                    ImageSource="mas.png"
                    Margin="0,0,20,0">

                <!-- Texto según plataforma -->
                <Button.Text>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Añadir" />
                        <On Platform="WinUI"   Value="Añadir" />
                    </OnPlatform>
                </Button.Text>

                <!-- Ancho según la plataforma -->
                <Button.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="120" />
                        <On Platform="WinUI"   Value="120" />
                    </OnPlatform>
                </Button.WidthRequest>

                <!-- FontSize según la plataforma -->
                <Button.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="12" />
                        <On Platform="WinUI"   Value="14" />
                    </OnPlatform>
                </Button.FontSize>
            </Button>

            <!-- BOTÓN REFRESCAR -->
            <Button CornerRadius="20"
                    HeightRequest="40"
                    ContentLayout="Left,5"
                    Command="{Binding ComandoCargarUsuarios}"
                    BackgroundColor="#666666"
                    TextColor="White"
                    ImageSource="refrescar.png">

                <Button.Text>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Refrescar" />
                        <On Platform="WinUI"   Value="Refrescar" />
                    </OnPlatform>
                </Button.Text>

                <Button.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="120" />
                        <On Platform="WinUI"   Value="120" />
                    </OnPlatform>
                </Button.WidthRequest>
                
                <Button.FontSize>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="12" />
                        <On Platform="WinUI"   Value="14" />
                    </OnPlatform>
                </Button.FontSize>
            </Button>

        </FlexLayout>

        <!-- LISTA DE USUARIOS -->
        <Grid>
            <CollectionView ItemsSource="{Binding Usuarios}"
                            SelectionMode="Single"
                            VerticalOptions="FillAndExpand"
                            HeightRequest="425">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="12.5" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#444444"
                               CornerRadius="10"
                               Padding="10"
                               HorizontalOptions="Center">
                            <Frame.WidthRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android" Value="340" />
                                    <On Platform="WinUI"   Value="600" />
                                </OnPlatform>
                            </Frame.WidthRequest>
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Image Grid.Column="0"
                                       Source="{Binding AvatarUrl}"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Aspect="AspectFill">
                                    <Image.Clip>
                                        <EllipseGeometry Center="25,25"
                                                        RadiusX="25"
                                                        RadiusY="25" />
                                    </Image.Clip>
                                </Image>

                                <!-- DATOS DEL USUARIO (Nombre, Correo, ID) -->
                                <StackLayout Grid.Column="1"
                                             Orientation="Vertical"
                                             HorizontalOptions="FillAndExpand"
                                             Spacing="2"
                                             Margin="10,0,0,0">

                                    <!-- NOMBRE -->
                                    <Label Text="{Binding Nombre}"
                                           TextColor="White">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android" Value="14" />
                                                <On Platform="WinUI"   Value="18" />
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>

                                    <!-- CORREO -->
                                    <Label Text="{Binding Correo, StringFormat='Email: {0}'}"
                                           TextColor="#AAAAAA">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android" Value="10" />
                                                <On Platform="WinUI"   Value="16" />
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>

                                    <!-- ID -->
                                    <Label Text="{Binding Id, StringFormat='ID: {0}'}"
                                           TextColor="#AAAAAA">
                                        <Label.FontSize>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android" Value="9" />
                                                <On Platform="WinUI"   Value="14" />
                                            </OnPlatform>
                                        </Label.FontSize>
                                    </Label>
                                </StackLayout>

                                <!-- BOTÓN EDITAR -->
                                <Button Grid.Column="2"
                                        HeightRequest="40"
                                        CornerRadius="8"
                                        Margin="0,0,5,0"
                                        ImageSource="editar.png"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ComandoSeleccionarUsuario}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#FF8C00"
                                        TextColor="White">

                                    <!-- Texto y ancho según plataforma -->
                                    <Button.Text>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="Android" Value="" />
                                            <On Platform="WinUI"   Value="Editar" />
                                        </OnPlatform>
                                    </Button.Text>

                                    <Button.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="Android" Value="45" />
                                            <On Platform="WinUI"   Value="100" />
                                        </OnPlatform>
                                    </Button.WidthRequest>

                                    <!-- FontSize según plataforma -->
                                    <Button.FontSize>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="Android" Value="12" />
                                            <On Platform="WinUI"   Value="14" />
                                        </OnPlatform>
                                    </Button.FontSize>
                                </Button>

                                <!-- BOTÓN ELIMINAR -->
                                <Button Grid.Column="3"
                                        HeightRequest="40"
                                        WidthRequest="43"
                                        CornerRadius="8"
                                        ImageSource="basura.png"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ComandoEliminarUsuario}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#C0392B"
                                        TextColor="White">

                                </Button>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

    </VerticalStackLayout>
</ContentPage>
