<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="practica21.MainPage"
    BackgroundColor="#333333">

    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Título -->
        <Label Text="Gestión de Usuarios"
               FontSize="24"
               TextColor="#FF8C00"
               HorizontalOptions="Center" />

        <!-- Logo (opcional) -->
        <Image Source="logo.png"
               WidthRequest="100"
               HeightRequest="100"
               Aspect="AspectFill"
               Margin="0,0,10,0" />

        <!-- BARRA DE BOTONES: Añadir / Refrescar -->
        <FlexLayout Direction="Row"
                    Wrap="NoWrap"
                    JustifyContent="Center"
                    AlignItems="Center"
                    Margin="20">

            <!-- BOTÓN AÑADIR -->
            <Button CornerRadius="20" 
                    HeightRequest="40"
                    ContentLayout="Left,5"
                    Command="{Binding ComandoAbrirFormulario}"
                    BackgroundColor="#FF8C00"
                    TextColor="White"
                    ImageSource="mas.png"
                    Margin="0,0,20,0">

                <!-- Texto según la plataforma -->
                <Button.Text>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Añadir" />
                        <On Platform="WinUI"   Value="Añadir" />
                    </OnPlatform>
                </Button.Text>

                <!-- Ancho según la plataforma -->
                <Button.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="120" />
                        <On Platform="WinUI"   Value="120" />
                    </OnPlatform>
                </Button.WidthRequest>
            </Button>

            <!-- BOTÓN REFRESCAR -->
            <Button CornerRadius="20"
                    HeightRequest="40"
                    ContentLayout="Left,5"
                    Command="{Binding ComandoCargarUsuarios}"
                    BackgroundColor="#666666"
                    TextColor="White"
                    ImageSource="refrescar.png">

                <Button.Text>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="Refrescar" />
                        <On Platform="WinUI"   Value="Refrescar" />
                    </OnPlatform>
                </Button.Text>

                <Button.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android" Value="120" />
                        <On Platform="WinUI"   Value="120" />
                    </OnPlatform>
                </Button.WidthRequest>
            </Button>

        </FlexLayout>

        <!-- LISTA DE USUARIOS -->
        <Grid>
            <!-- Forzamos altura para scroll interno en la lista -->
            <CollectionView ItemsSource="{Binding Usuarios}"
                            SelectionMode="Single"
                            VerticalOptions="FillAndExpand"
                            HeightRequest="425">

                <!-- Separación vertical entre ítems -->
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="12.5" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- FRAME (con OnPlatform para su ancho) -->
                        <Frame BackgroundColor="#444444"
                               CornerRadius="10"
                               Padding="10"
                               HorizontalOptions="Center">

                            <!-- Ajuste dinámico del ancho según plataforma -->
                            <Frame.WidthRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android" Value="320" />
                                    <On Platform="WinUI"   Value="600" />
                                </OnPlatform>
                            </Frame.WidthRequest>

                            <!-- Distribución horizontal en 4 columnas: 
                                 0) Avatar
                                 1) Datos del usuario
                                 2) Botón Editar
                                 3) Botón Eliminar 
                            -->
                            <Grid ColumnSpacing="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Image Grid.Column="0"
                                       Source="{Binding AvatarUrl}"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Aspect="AspectFill">
                                    <Image.Clip>
                                        <EllipseGeometry Center="25,25"
                                                        RadiusX="25"
                                                        RadiusY="25" />
                                    </Image.Clip>
                                </Image>

                                <!-- Datos del Usuario -->
                                <StackLayout Grid.Column="1"
                                             Orientation="Vertical"
                                             HorizontalOptions="FillAndExpand"
                                             Spacing="2"
                                             Margin="10,0,0,0">
                                    <Label Text="{Binding Nombre}"
                                           FontSize="18"
                                           TextColor="White" />
                                    <Label Text="{Binding Correo, StringFormat='Email: {0}'}"
                                           FontSize="14"
                                           TextColor="#AAAAAA" />
                                    <Label Text="{Binding Id, StringFormat='ID: {0}'}"
                                           FontSize="12"
                                           TextColor="#AAAAAA" />
                                </StackLayout>

                                <!-- BOTÓN EDITAR -->
                                <Button Grid.Column="2"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ComandoSeleccionarUsuario}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#FF8C00"
                                        TextColor="White"
                                        HeightRequest="40"
                                        CornerRadius="8"
                                        ImageSource="editar.png"
                                        Margin="0,0,5,0">

                                    <!-- Texto según la plataforma -->
                                    <Button.Text>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="Android" Value="" />
                                            <On Platform="WinUI"   Value="Editar" />
                                        </OnPlatform>
                                    </Button.Text>

                                    <!-- Ancho según la plataforma -->
                                    <Button.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="Android" Value="45" />
                                            <On Platform="WinUI"   Value="100" />
                                        </OnPlatform>
                                    </Button.WidthRequest>
                                </Button>

                                <!-- BOTÓN ELIMINAR -->
                                <Button Grid.Column="3"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ComandoEliminarUsuario}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#C0392B"
                                        TextColor="White"
                                        HeightRequest="40"
                                        CornerRadius="8"
                                        ImageSource="basura.png">

                                    <Button.Text>
                                        <OnPlatform x:TypeArguments="x:String">
                                            <On Platform="Android" Value="" />
                                            <On Platform="WinUI"   Value="" />
                                        </OnPlatform>
                                    </Button.Text>

                                    <Button.WidthRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="Android" Value="45" />
                                            <On Platform="WinUI"   Value="40" />
                                        </OnPlatform>
                                    </Button.WidthRequest>
                                </Button>

                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
